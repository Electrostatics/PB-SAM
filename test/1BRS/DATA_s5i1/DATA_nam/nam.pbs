module load gcc acml

RUNID=1

EXEC=$PBSAMHOME/working_code/CODE_PBSAM/bin/bdnam
MOLDIR=$PBSAMHOME/old/Example_1BRS
THREAD=24
SALT_CONC=0.05
NTRAJ=5000
DOCKDIST=3.5
RUNNAME=1BRS_i"$SALT_CONC"_d"$DOCKDIST"_r"$RUNID"
STATFILE=stat_"$RUNNAME".dat
CONTACTFILE=$MOLDIR/PREP_findContacts/contactdef_c2.dat
SYSID=1

PQR1=$MOLDIR/config/1BRS_chainA_p1.5d3_s5i1.pqr
IMAT1=$MOLDIR/DATA_s5i1/makeIMat/IMAT_P30_250k/chainA
EXPPATH1=$MOLDIR/DATA_s5i1/DATA_SELFPOL/IMAT_250k_based/SOLEXP_p30/salt_i0.05/chainA
EXPNAME1=1BRS_A_s5i1_i0.05_p30.0

PQR2=$MOLDIR/config/1BRS_chainD_p1.5d3_s5i1.pqr
IMAT2=$MOLDIR/DATA_s5i1/makeIMat/IMAT_P30_250k/chainD
EXPPATH2=$MOLDIR/DATA_s5i1/DATA_SELFPOL/IMAT_250k_based/SOLEXP_p30/salt_i0.05/chainD
EXPNAME2=1BRS_D_s5i1_i0.05_p30.0

LOGFILE=bd_"$RUNNAME".log
$EXEC $THREAD $SALT_CONC $NTRAJ $DOCKDIST $STATFILE $RUNNAME $CONTACTFILE $SYSID $PQR1 $IMAT1 $EXPPATH1 $EXPNAME1 $PQR2 $IMAT2 $EXPPATH2 $EXPNAME2 > $LOGFILE 2>&1
