PQR2=$MOLDIR/config/1BRS_chainD_p1.5d3_s5i1.pqr
IMAT2=$MOLDIR/DATA_s5i1/makeIMat/IMAT_P30_250k/chainD
EXPPATH2=$MOLDIR/DATA_s5i1/DATA_SELFPOL/SOLEXP_p30/chainD
EXPNAME2=1BRS_D_s5i1_i0.05_p30.0

LOGFILE=bd_"$RUNNAME".log
$EXEC $THREAD $SALT_CONC $NTRAJ $DOCKDIST $NP1 $NP2 $BOXLENGTH $CONTACTFILE $MAXTIME $RUNNAME $SYSID $PQR1 $IMAT1 $EXPPATH1 $EXPNAME1 $PQR2 $IMAT2 $EXPPATH2 $EXPNAME2 > $LOGFILE 2>&1 
