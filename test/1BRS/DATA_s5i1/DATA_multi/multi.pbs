RUNID=1

EXEC=$PBSAMHOME/working_code/PBSAM_all/bin/bdm

TAIL=1BRS

THREAD=8
MOLDIR=$PBSAMHOME/working_code/PBSAM_all/test/1BRS
SALT_CONC=0.05
NTRAJ=5000
DOCKDIST=3.5
NP1=124
NP2=1
BOXLENGTH=320
CONTACTFILE=$MOLDIR/PREP_findContacts/contactdef_c2.dat
MAXTIME=300000
RUNNAME="$TAIL"_"$BOXLENGTH"_i"$SALT_CONC"_d"$DOCKDIST"_r"$RUNID"
SYSID=1

PQR1=$MOLDIR/config/1BRS_chainA_p1.5d3_s5i1.pqr
IMAT1=$MOLDIR/DATA_s5i1/makeIMat/IMAT_P30_250k/chainA
EXPPATH1=$MOLDIR/DATA_s5i1/DATA_SELFPOL/SOLEXP_p30/chainA
